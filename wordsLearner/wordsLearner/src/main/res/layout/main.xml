<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="MergeRootFrame" >
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#ffba42">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/is_it_translated_right"
                android:textSize="20sp"
                android:id="@+id/label"
                android:gravity="center"
                android:background="#ffff902b"/>
        <TextView
                android:layout_below="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/some_foreign_word"
                android:gravity="center"
                android:id="@+id/foreignWord"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"/>
        <TextView
                android:layout_below="@+id/foreignWord"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/some_translation"
                android:gravity="center"
                android:id="@+id/translation"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:textAlignment="center"/>
        <TextView
                android:layout_below="@+id/translation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/score"
                android:layout_marginLeft="10dp"
                android:id="@+id/score"
                android:textSize="30sp"
                android:layout_marginTop="20dip"
                android:textAlignment="center"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:id="@+id/helpBtn"
            android:layout_alignParentRight="true"
            android:layout_above="@+id/yes"
            android:background="#ffde6f09"
            android:textSize="20sp"
            android:text="@string/help"/>
        <Button
                android:layout_above="@+id/no"
                android:text="@string/yes"
                android:id="@+id/yes"
                android:textSize="20sp"
                android:background="#ffde6f09"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
        <Button
                android:text="@string/no"
                android:id="@+id/no"
                android:textSize="20sp"
                android:background="#ffde6f09"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="60dp"/>
    </RelativeLayout>
</FrameLayout>
