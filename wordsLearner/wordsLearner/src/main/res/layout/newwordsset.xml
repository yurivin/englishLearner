<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/header">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/creation_of_a_set"
            android:gravity="center"
            android:textSize="20sp"
            android:id="@+id/titleTW"
            android:layout_gravity="center_horizontal"/>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/background">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/some_foreign_word"
                android:textSize="20sp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:id="@+id/foreignWordTV"
                android:layout_alignParentLeft="true"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:gravity="center"
                android:singleLine="true"
                android:background="@color/editText"
                android:id="@+id/foreignWordET"
                android:layout_below="@+id/foreignWordTV"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/some_translation"
                android:textSize="20sp"
                android:gravity="center"
                android:id="@+id/translationTV"
                android:layout_below="@+id/foreignWordET"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:background="@color/editText"
                android:singleLine="true"
                android:gravity="center"
                android:id="@+id/translationET"
                android:layout_below="@+id/translationTV"
                android:layout_alignParentLeft="true"/>
        <Button android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/rename"
                android:textSize="20sp"
                android:background="@color/button"
                android:id="@+id/btnRename"
                android:layout_above="@+id/btnSaveWord"/>
       <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/save_word"
                android:textSize="20sp"
                android:background="@color/button"
                android:id="@+id/btnSaveWord"
                android:layout_marginTop="10dp"
                android:layout_above="@+id/btnSaveWordSet"
                android:layout_alignLeft="@+id/button"/>
        <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="@string/save_word_set"
                android:textSize="20sp"
                android:background="@color/button"
                android:layout_marginTop="10dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/btnSaveWordSet" />
    </RelativeLayout>
</LinearLayout>